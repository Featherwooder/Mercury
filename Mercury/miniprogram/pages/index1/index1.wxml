  </swiper>
</view>
<view>
  <view wx:if="{{!avatarUrl}}">
  <button 
    size="default"
  
    class="userinfo-avatar"
    open-type="getUserInfo"
    bindgetuserinfo="onGetUserInfo"
  >点击通过微信登录</button>
  </view>
  <view wx:else>
  <button 
    size="default"
  
    class="userinfo-avatar"
    open-type="getUserInfo"
    bindgetuserinfo="onGetUserInfo"
  >点击进入习惯星球</button>
  </view>
</view>
  

