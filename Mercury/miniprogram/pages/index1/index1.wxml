    <image  class="index_image1" src="/images/1_welcome.png" mode="" lazy-load="false" />
      
</view>
<view>
  <swiper class="index_swiper" indicator-dots="{{true}}" autoplay="{{true}}" circular="{{true}}" >
    <swiper-item>
      <image src="https://pic.downk.cc/item/5fdb655a3ffa7d37b3bc8dd3.png"/>
    </swiper-item>
    <swiper-item>
      <image src="https://pic.downk.cc/item/5fdb655a3ffa7d37b3bc8dd6.png"/>
